<h1>Login</h1>

<% if @message %>
  <h2>Errors</h2>
  <p style="color: red"><%= @message %></p>
<% end %>

<%= form_tag(login_path) do %>
  <%= label_tag("Username") %>
  <%= text_field_tag(:username) %>
  <%= label_tag("Password") %>
  <%= password_field_tag(:password) %>
  <%= submit_tag("Login") %>
<% end %>